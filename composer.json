{
  "name": "codezone/router",
  "description": "A FastRoute-based router for use in Roots-based WordPress plugins and themes or any plugin or theme that use Illuminate/Container.",
  "type": "package",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Craig Wann",
      "email": "craig@codezone.io"
    }
  ],
  "autoload": {
    "psr-4": {
      "CodeZone\\Router\\": "src/"
    },
    "files": [
      "src/helpers.php",
      "Router.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "illuminate/container": "^v8.0.0",
    "illuminate/support": "^v8.0.0",
    "illuminate/http": "^v8.0.0",
    "nikic/fast-route": "^1.3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3.8",
    "mreduar/laravel-phpcs": "^1.8"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4"
    },
    "platform-check": false
  }
}
